<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <servlet>
        <servlet-name>NewsListServlet</servlet-name>
        <servlet-class>org.coolsugar.web.NewsListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewsListServlet</servlet-name>
        <url-pattern>/news_list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>NewsDetailServlet</servlet-name>
        <servlet-class>org.coolsugar.web.NewsDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewsDetailServlet</servlet-name>
        <url-pattern>/news_detail/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ThumbServlet</servlet-name>
        <servlet-class>org.coolsugar.web.ThumbServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ThumbServlet</servlet-name>
        <url-pattern>/thumb</url-pattern>
    </servlet-mapping>


</web-app>